<?xml version="1.0" encoding="ISO-8859-1"?>
<juego xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/juego-logica.xsd">
	<id>2</id>
	<titulo>Turismo por España</titulo>
	<texto>Tres estudiantes hispanoamericanos de distintos países visitan España. Descubre la nacionalidad de cada uno y también la ciudad y el monumento que quieren visitar</texto>
	<costo>26</costo>
	<dimensiones>
		<dimension>
			<id>Nombre</id>
			<valores>
				<valor>Pedro</valor>
				<valor>Belen</valor>
				<valor>Carlos</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Nacionalidad</id>
			<valores>
				<valor>Mejicano</valor>
				<valor>Argentino</valor>
				<valor>Puertoriqueño</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Ciudad</id>
			<valores>
				<valor>Sevilla</valor>
				<valor>Barcelona</valor>
				<valor>Madrid</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Monumento</id>
			<valores>
				<valor>Casa Milá</valor>
				<valor>Palacio Real</valor>
				<valor>La Giralda</valor>
			</valores>
		</dimension>
	</dimensiones>
