<?xml version="1.0" encoding="ISO-8859-1"?>
<juego xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../xsd/juego-logica.xsd">
	<id>7</id>
	<titulo>Gustos literarios</titulo>
	<texto>Descubre los gustos literarios de estos 4 personajes y sus profesiones</texto>
	<costo>24</costo>
	<dimensiones>
		<dimension>
			<id>Nombre</id>
			<valores>
				<valor>Arturo</valor>
				<valor>Carlos</valor>
				<valor>Juan</valor>
				<valor>Luis</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Profesión</id>
			<valores>
				<valor>Empresario</valor>
				<valor>Jardinero</valor>
				<valor>Mecánico</valor>
				<valor>Médico</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Género</id>
			<valores>
				<valor>Cuentos</valor>
				<valor>Novela</valor>
				<valor>Poesía</valor>
				<valor>Teatro</valor>
			</valores>
		</dimension>
	</dimensiones>
	<pistas-del-juego>
		<pista-del-juego>
			<texto>El médico no se llama Carlos y no le gusta la poesía</texto>
			<pistas>
				<pista>
					<id-dimension1>Profesión</id-dimension1>
					<id-valor1>Médico</id-valor1>
					<id-dimension2>Nombre</id-dimension2>
					<id-valor2>Carlos</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
				<pista>
					<id-dimension1>Profesión</id-dimension1>
					<id-valor1>Médico</id-valor1>
					<id-dimension2>Género</id-dimension2>
					<id-valor2>Poesía</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
		<pista-del-juego>
			<texto>Luis no es médico ni empresario</texto>
			<pistas>
				<pista>
					<id-dimension1>Nombre</id-dimension1>
					<id-valor1>Luis</id-valor1>
					<id-dimension2>Profesión</id-dimension2>
					<id-valor2>Médico</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
				<pista>
					<id-dimension1>Nombre</id-dimension1>
					<id-valor1>Luis</id-valor1>
					<id-dimension2>Profesión</id-dimension2>
					<id-valor2>Empresario</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
		<pista-del-juego>
			<texto>Al que le gustan los cuentos no es mecánico</texto>
			<pistas>
				<pista>
					<id-dimension1>Género</id-dimension1>
					<id-valor1>Cuentos</id-valor1>
					<id-dimension2>Profesión</id-dimension2>
					<id-valor2>Mecánico</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
		<pista-del-juego>
			<texto>Arturo es jardinero y no le gusta el teatro</texto>
			<pistas>
				<pista>
					<id-dimension1>Nombre</id-dimension1>
					<id-valor1>Arturo</id-valor1>
					<id-dimension2>Profesión</id-dimension2>
					<id-valor2>Jardinero</id-valor2>
					<afirma-niega>true</afirma-niega>
				</pista>
				<pista>
					<id-dimension1>Nombre</id-dimension1>
					<id-valor1>Arturo</id-valor1>
					<id-dimension2>Género</id-dimension2>
					<id-valor2>Teatro</id-valor2>
					<afirma-niega>false</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
		<pista-del-juego>
			<texto>Al médico le gustan los cuentos</texto>
			<pistas>
				<pista>
					<id-dimension1>Profesión</id-dimension1>
					<id-valor1>Médico</id-valor1>
					<id-dimension2>Género</id-dimension2>
					<id-valor2>Cuentos</id-valor2>
					<afirma-niega>true</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
		<pista-del-juego>
			<texto>Al empresario le encanta la novela</texto>
			<pistas>
				<pista>
					<id-dimension1>Profesión</id-dimension1>
					<id-valor1>Empresario</id-valor1>
					<id-dimension2>Género</id-dimension2>
					<id-valor2>Novela</id-valor2>
					<afirma-niega>true</afirma-niega>
				</pista>
			</pistas>
		</pista-del-juego>
	</pistas-del-juego>
</juego>
