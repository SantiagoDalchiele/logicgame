	<id>8</id>
	<titulo>Mascotas</titulo>
	<texto>Roberto, Daniel, Isabel, M\u00F3nica y Patricia son amantes de las mascotas.  Descubre que mascota tiene cada uno, que nombre les pusieron y de que color es cada una</texto>
	<costo>126</costo>
	<dimensiones>
		<dimension>
			<id>Nombre</id>
			<valores>
				<valor>Roberto</valor>
				<valor>Daniel</valor>
				<valor>Isabel</valor>
				<valor>M\u00F3nica</valor>
				<valor>Patricia</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Mascota</id>
			<valores>
				<valor>gato</valor>
				<valor>perro</valor>
				<valor>cobaya</valor>
				<valor>conejo</valor>
				<valor>serpiente</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Nombre de la mascota</id>
			<valores>
				<valor>Gui\u00F1itos</valor>
				<valor>Pomp\u00F3n</valor>
				<valor>\u00D3scar</valor>
				<valor>Ka</valor>
				<valor>Zara</valor>
			</valores>
		</dimension>
		<dimension>
			<id>Color</id>
			<valores>
				<valor>negro</valor>
				<valor>marr\u00F3n</valor>
				<valor>gris</valor>
				<valor>rojo</valor>
				<valor>blanco</valor>
			</valores>
		</dimension>
	</dimensiones>
